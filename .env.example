# Task Master Environment Variables
# Copy this file to .env.local and configure as needed

# ===========================================
# FEATURE FLAGS
# ===========================================

# Authentication System
# Enable/disable user authentication system
TASKMASTER_ENABLE_AUTH=false

# Require email verification for new users
TASKMASTER_AUTH_REQUIRE_EMAIL_VERIFICATION=false

# Allow guest users to access the app without authentication
TASKMASTER_AUTH_ALLOW_GUEST=true

# Analytics & Tracking
# Enable analytics and user behavior tracking
TASKMASTER_ENABLE_ANALYTICS=false

# Track detailed user actions (clicks, navigation, etc.)
TASKMASTER_ANALYTICS_TRACK_ACTIONS=false

# Beta Features
# Enable all beta/experimental features
TASKMASTER_ENABLE_BETA_FEATURES=false

# Advanced Kanban features (swimlanes, custom fields, etc.)
TASKMASTER_BETA_ADVANCED_KANBAN=false

# AI-powered task suggestions and automation
TASKMASTER_BETA_AI_SUGGESTIONS=false

# Development & Debug
# Enable debug mode (shows additional logging, dev tools)
TASKMASTER_DEBUG_MODE=false

# Show performance metrics in development
TASKMASTER_DEBUG_PERFORMANCE=false

# ===========================================
# DATABASE
# ===========================================

# PostgreSQL connection string
DATABASE_URL=postgres://postgres:password@localhost:5432/kanban_db

# ===========================================
# AUTHENTICATION (when TASKMASTER_ENABLE_AUTH=true)
# ===========================================

# NextAuth.js secret (generate with: openssl rand -base64 32)
# NEXTAUTH_SECRET=your-secret-here

# NextAuth.js URL (usually your domain)
# NEXTAUTH_URL=http://localhost:3000

# OAuth Provider Settings (example for GitHub)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Provider Settings (example for Google)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# ANALYTICS (when TASKMASTER_ENABLE_ANALYTICS=true)
# ===========================================

# Google Analytics tracking ID
# GA_TRACKING_ID=G-XXXXXXXXXX

# PostHog API key and host
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
